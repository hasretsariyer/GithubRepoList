<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/repoListFragment">

    <fragment
        android:id="@+id/repoDetailFragment"
        android:name="com.example.githubrepolist.view.ui.DetailFragment"
        android:label="RepoDetailFragment">
        <argument
            android:name="starCount"
            android:defaultValue="0"
            app:argType="string" />
        <argument
            android:name="openIssues"
            android:defaultValue="0"
            app:argType="string" />
        <argument
            android:name="repoName"
            app:nullable="false"
            app:argType="string" />
        <argument
            android:name="owner"
            app:nullable="false"
            app:argType="string" />
        <argument
            android:name="avatarUrl"
            app:nullable="false"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/repoListFragment"
        android:name="com.example.githubrepolist.view.ui.RepoListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/repo_list_fragment">
        <action
            android:id="@+id/action_repoListFragment_to_repoDetailFragment"
            app:destination="@id/repoDetailFragment" />
    </fragment>
</navigation>